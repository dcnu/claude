			"Bash(pnpm tsc *)",
			"Bash(pnpm why *)",
			"Bash(prettier *)",
			"Bash(tsc --noEmit *)",
			"Bash(pip3 install *)",
			"Bash(py *)",
			"Bash(pytest *)",
			"Bash(python *)",
			"Bash(python3 *)",
			"Bash(ruff *)",
			"Bash(source .venv/bin/activate *)",
